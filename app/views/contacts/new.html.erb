<br>
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Contact Me</h2>
                <p>You can enter a message and leave your information.  I'll get back to you soon!</p>
            </div>
        </div>
        <% if @contact.errors.any? %>
            <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <div class="alert alert-danger">
                  <h4>Could not save your information:</h4>
                  <ul>
                  <% @contact.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              </div>
            </div>
        <% end %>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <%= form_for @contact, url: create_contact_path(@contact) do |f| %>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :name %>
                            <%= f.text_field :name, :class => "form-control", :placeholder => 'Name' %>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :email %>
                            <%= f.text_field :email, :class => "form-control", :placeholder => 'Email' %>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :phone_number %>
                            <%= f.text_field :phone_number, :class => "form-control", :placeholder => 'Phone number' %>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :company %>
                            <%= f.text_field :company, :class => "form-control", :placeholder => 'Company' %>
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <%= f.label :message %>
                            <%= f.text_area :message, class: "form-control", :placeholder => "Message", rows: 5 %>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="form-group col-xs-12">
                            <%= f.submit 'Get in touch', class: "btn btn-success btn-lg" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>